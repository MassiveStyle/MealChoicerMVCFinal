@model Meal


<h2>Deleting @Model.Name</h2>
<hr />


@if (ViewData["ErrorMessage"] != null)
{
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.Name
        </dd>

    </dl>
</div>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete meal" class="btn btn-danger" onclick="javascript: return confirm('Are you sure you want to delete this meal?');" />
</form>


<div>
    <a asp-controller="Meal" asp-action="Index">Back to list</a>
</div>
