@model MealAddViewModel

<h2>Create a new meal</h2>

<hr />



@if (ViewData["ErrorMessage"] != null)
{
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
}

<form method="post" asp-controller="Meal" asp-action="Add">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Meal.Name" class="form-label"></label>
        <input asp-for="Meal.Name" class="form-control" />
        <span asp-validation-for="Meal.Name" class="text-danger"></span>
    </div>

    <input type="submit" value="Add meal" class="btn btn-primary" />
</form>

<div>
    <a asp-controller="Meal" asp-action="Index">Back to list</a>
</div>